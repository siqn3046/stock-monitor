# 你的管理台域名（必须是公网可解析到这台服务器的域名）
WEB_DOMAIN=stock.example.com

# Let’s Encrypt 邮箱（证书签发/续期用）
LETSENCRYPT_EMAIL=you@example.com

# 初始管理员账号
ADMIN_USER=admin
ADMIN_PASS=ChangeMe_123456

# 是否允许注册
ALLOW_SIGNUP=false

# Cookie 密钥（部署时 install.sh 会自动生成，也可手动填）
COOKIE_SECRET=

# 300=5分钟
CHECK_INTERVAL_SECONDS=300
USER_AGENT=Mozilla/5.0 (stock-monitor)
# true=每次检查都推送；false=仅变化推送
ALWAYS_NOTIFY=false
